<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.base.setup</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="1"/>
        <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('app_settings_block')]" position="inside">
                <h2>Report URL Helper</h2>
                <div class="row mt16 o_settings_container" id="report_url_helper_settings">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="is_show_print_url_cog_menu" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="is_show_print_url_cog_menu" />
                            <div class="text-muted">
                                This will show the Print URL in the Cog Menu for all users
                            </div>
                        </div>
                        <div class="o_setting_left_pane">
                            <field name="is_hide_default_print_cog_menu" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="is_hide_default_print_cog_menu" />
                            <div class="text-muted">
                                This will hide the Default Print Cog Menu for all users
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
